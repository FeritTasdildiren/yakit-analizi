# Veritabanı bağlantısı (PostgreSQL + asyncpg)
DATABASE_URL=postgresql+asyncpg://user:pass@localhost:5432/yakit_analizi

# Redis bağlantısı (Celery broker ve cache)
REDIS_URL=redis://localhost:6379/0

# TCMB EVDS API anahtarı (https://evds2.tcmb.gov.tr/ adresinden alınır)
TCMB_EVDS_API_KEY=your_api_key_here

# Brent veri kaynağı fallback (varsayılan: yfinance)
# BRENT_FALLBACK_SOURCE=yahoo_web

# Günlük veri çekme saati (TSİ - İstanbul saati, varsayılan: 18)
# DATA_FETCH_HOUR=18

# Yeniden deneme ayarları
# RETRY_COUNT=3
# RETRY_BACKOFF=2.0

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_DAILY_NOTIFICATION_HOUR=11

# Celery Zamanlama (TSİ - İstanbul saati)
PREDICTION_HOUR=18
PREDICTION_MINUTE=30
NOTIFICATION_HOUR=11
DATA_FETCH_HOUR=18
MORNING_DATA_FETCH_HOUR=10
MORNING_DATA_FETCH_MINUTE=15
MORNING_PREDICTION_HOUR=10
MORNING_PREDICTION_MINUTE=45
